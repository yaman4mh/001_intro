<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/main_etUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="#499790"
        android:ems="10"
        android:hint="UserName"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#499790"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/main_etUserName"
        app:layout_constraintStart_toStartOf="@+id/main_etUserName"
        app:layout_constraintTop_toBottomOf="@+id/main_etUserName" />

    <Button
        android:id="@+id/main_btnSetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Set Text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_etPassword"
        app:layout_constraintStart_toStartOf="@+id/main_etPassword"
        app:layout_constraintTop_toBottomOf="@+id/main_etPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>